<div class="container mt-5" style="width: 30%">
    <div class="card mb-5">
        <div class="card-header text-center">Contáctenos</div>
        <div class="card-body">
            <form action="/contact" method="post" id="caja-contacto">
                <div class="form-floating mb-3">
                    <input
                        type="text"
                        class="form-control"
                        name="nombre"
                        id="nombre"
                        placeholder="Ingresa tu Nombre"
                        autofocus
                    />
                    <label for="floatingInput">Ingresa tu Nombre</label>
                    <span id="n-error" aria-live="assertive"></span>
                </div>

                <div class="form-floating mb-3">
                    <input
                        type="text"
                        class="form-control"
                        name="telefono"
                        id="telefono"
                        placeholder="Ingresa tu número de teléfono"
                    />
                    <label for="floatingInput">Ingresa tu número de teléfono</label>
                    <span id="t-error" aria-live="assertive"></span>
                </div>

                <div class="form-floating mb-3">
                    <input
                        class="form-control"
                        type="text"
                        name="correo"
                        id="correo"
                        placeholder="Ingresa tu correo electrónico"
                    />
                    <label for="floatingInput">Ingresa tu correo electrónico</label>
                    <span id="c-error" aria-live="assertive"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea
                        class="form-control"
                        placeholder="Escribe tu mensaje"
                        id="mensaje"
                        name="mensaje"
                        style="height: 100px"
                    ></textarea>
                    <label for="floatingTextarea2">Escribe tu mensaje</label>
                </div>

                <div class="text-center">
                    <button
                        type="submit"
                        class="btn btn-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#miModal"
                    >
                        Enviar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="js/codecontact.js"></script>