<body>
    <% if (login) { %>
        <header class="hero" style="background-image: linear-gradient(180deg, #0000008c 0%, #0000008c 100%), url('resources/images/computer.jpg');
        background-size: cover;">
            <nav class="nav container">
                <div class="nav__logo">
                    <a href="/" class="nav__title">HorariosFacci</a>
                </div>

                <ul class="nav__link nav__link--menu">
                    <li>
                        <a href="" class="nav__links">Contáctenos</a>
                    </li>
                    <li>
                        <a href="/logout" class="nav__links"><%= name %></a>
                    </li>
                </ul>
            </nav>
        </header>

        <section class="hero__container container">
            <h1 class="hero__title">Gestiona tus horarios</h1>
            <p class="hero__paragraph"></p>
            <a href="#" class="cta" id="comienzo">Comienza ahora</a>
        </section>
        </header>
        <main>
            <section class="container about">
                <h2 class="subtitle">Beneficios de preferirnos</h2>

